<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="#d7dbdc"
    android:gravity="center"
    tools:context="ggc.apresentaoandroid.SplashScreenActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/sub_titulo_splash"
        android:layout_margin="@dimen/text_subtitulo"
        android:id="@+id/tv_titulo"
        android:textColor="@color/primaryColor"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/logo_cliente_1"
        android:layout_below="@+id/tv_titulo"
        android:layout_margin="3dp"
        android:scaleType="centerInside"
        android:background="@drawable/ic_bg_item"
        android:src="@drawable/logo_cliente_olho_do_gato" />
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="3dp"
        android:id="@+id/logo_cliente_2"
        android:scaleType="centerInside"
        android:layout_below="@+id/tv_titulo"
        android:background="@drawable/ic_bg_item"
        android:layout_toRightOf="@+id/logo_cliente_1"
        android:src="@drawable/logo_cliente_boston" />
    <ImageView
        android:background="@drawable/ic_bg_item"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="3dp"
        android:id="@+id/logo_cliente_3"
        android:layout_below="@+id/logo_cliente_2"

        android:src="@drawable/logo_cliente_apis_flora"/>
    <ImageView
        android:background="@drawable/ic_bg_item"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:scaleType="centerInside"
        android:layout_below="@+id/logo_cliente_2"
        android:id="@+id/logo_cliente_4"
        android:layout_toRightOf="@+id/logo_cliente_3"
        android:src="@drawable/logo_cliente_livenza" />
    <ImageView
        android:background="@drawable/ic_bg_item"
        android:layout_width="160dp"
        android:layout_height="150dp"
        android:padding="10dp"
        android:layout_below="@+id/logo_cliente_4"
        android:id="@+id/logo_cliente_5"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo_cliente_dgt"
 />
</RelativeLayout>
