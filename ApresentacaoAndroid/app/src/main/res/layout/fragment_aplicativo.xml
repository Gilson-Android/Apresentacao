<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".PrincipalActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:maxWidth="100dp"
        android:maxHeight="100dp"
        android:src="@drawable/ic_aplicativos" />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_subtitulo"
        android:padding="@dimen/text_subtitulo"
        android:textAlignment="center"
        android:text="@string/sub_aplicativo"
        />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textSize="@dimen/text_conteudo"
        android:textAlignment="center"
        android:text="@string/conteudo_aplicativo"
        />
</LinearLayout>
