<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ggc.apresentaoandroid">
    <!-- Permissão para verificar conexão -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.GET_TASKS" />


    <application
        android:allowBackup="true"
        android:excludeFromRecents="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.MeuTema">
        <activity
            android:name=".SplashScreenActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"
            android:theme="@style/Theme.MeuTema.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ServicosActivity"
            android:label="@string/title_activity_servicos"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".PrincipalActivity"
            android:supportsRtl="true"
            android:windowSoftInputMode="stateHidden"></activity>
    </application>

</manifest>
